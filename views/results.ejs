<!-- header.ejs partial - header, nav bar -->
<%- include('partials/header.ejs') %>
<!-- index.ejs - main content -->
    <% if (typeof error !== "undefined" && error) { %>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Your Plants</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= error %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
    <% } %>
        <br><br>
        <% imageUrlArray.forEach(function(imageUrl, i){ %>
            <img src='<%= imageUrl %>' width='200' alt='<%= genusArray[i] %>'/><br>
            Scientific name: <i><%= scienceNameArray[i] %></i> Family: <i><%= familyNameArray[i] %><br></i>
            Common name: <b><%= commonNameArray[i] %></b> Genus: <%= genusArray[i] %><br>
            <button <%= isVisible %> id='<%= idArray[i] %>;<%= imageUrl %>;<%= genusArray[i] %>;<%= scienceNameArray[i] %>;<%= familyNameArray[i] %>;<%= commonNameArray[i] %>;' class='option'>Add to my plants</button>
            <br><br>
        <% });%>
        <br><br>
        <br><br>
