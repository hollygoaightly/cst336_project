<!-- header.ejs partial - header, nav bar -->
<%- include('partials/header.ejs') %>

<!-- index.ejs - main content -->
        <main>
            <p><%= yourPlantsArray[0].FirstName %>'s Plants</p>
<!-- yourPlantsContainer start -->
            <div class="yourPlantsContainer">

                <% yourPlantsArray.forEach((yourPlantObj,i) => { %>
<!-- plantObj start -->
                <div class="plantObj rounded shadow">
                        <div id="plantProperties">
                            <img src="<%= yourPlantObj.Image_Url %>" height="100" alt="plant common name <%= yourPlantObj.Common_Name %>"  /><br />
                            Common Name: <%= yourPlantObj.Common_Name %><br />
                            Scientific Name: <%= yourPlantObj.Scientific_Name %><br />
                            Family: <%= yourPlantObj.Family %><br />
                            Genus: <%= yourPlantObj.Genus %><br />
                            <form method="POST">
                            USDA Hardiness Zone:<input type="text" name="hardiness" value="<%= yourPlantObj.Hardiness %>" /><br />
                            Watering Frequency: <input type="text" name="waterFreq" value="<%= yourPlantObj.WaterFrequency %>" /><br />
                            Soil Used: <input type="text" name="soil" value="<%= yourPlantObj.Soil %>" /><br />
                            Temperature: <input type="text" name="temperature" value="<%= yourPlantObj.Temperature %>" /><br />
                            Light Exposure: <input type="text" name="lightExposure" value="<%= yourPlantObj.LightExposure %>" /><br />
                            Fertilization: <input type="text" name="fertilization" value="<%= yourPlantObj.Fertilization %>" /><br />
                        </div>
                        <div id="plantProperties">
                                Notes:<br />
                                <textarea name="description" rows="4" cols="25"><%= yourPlantObj.Description %></textarea>
                                <button>Save</button> <button>Share</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
<!-- plantObj end -->
            </div>
<!-- yourPlantsContainer end -->
            <form action="/findPlants">
                <button>Add Plant</button>
            </form>
        </main>
        
<!-- footer.ejs partial - footer -->
<%- include('partials/footer.ejs') %>
